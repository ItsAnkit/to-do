<div class = 'creator-container'>
  <h1> Add new issue </h1>
  <%= form_tag issues_path, action: :post do %>
    <table class="form-table" border="0" cellpadding="0" cellspacing="5" class="table" width="100%">
      <tbody>
        <tr>
          <td>
            <%= label_tag 'issue_state', 'State' %>
          </td>
          <td>
            <%= text_field_tag 'state' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= label_tag 'issue_description', 'Description' %>
          </td>
          <td>
            <%= text_field_tag 'description' %>
          </td>
        </tr>
      </tbody>
    </table>
    <%= submit_tag 'Create', class: 'submit-btn' %>
  <% end %>
</div>
